<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    //這裡是Linearlayout佈局的背景顏色
    <solid android:color="#3C3C3C" />
    //這裡是設定邊框線的粗細和顏色
    <stroke
        android:width="0.5dp"
        android:color="@color/white" />

    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    <margin
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="2dp" />
    //角的話，裡邊有引數可以單獨設定
    <corners android:radius="15dp" />

</shape>