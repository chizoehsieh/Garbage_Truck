<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    //第一組item 圓角邊框。
    <item>
        <shape android:layout_width="wrap_content">
            <stroke
                android:width="1dp"
                android:color="#FF018786" />
            //邊框線顏色
            <corners android:radius="5dp" />
            //圓角度數
            <solid android:color="#FF03DAC5">//背景顏色
            </solid>
            <padding android:right="5dp" />
            //邊距
            <size
                android:width="300dp"
                android:height="30dp" />
        </shape>
    </item>
</layer-list>